- @external_sheet = params[:style]
- @file = params[:file] || "Index"
- params[:interleave] ? (params[:wide] ? @ens = 'interleaved_wide' : @ens = 'interleaved') : @ens = ''
<!DOCTYPE html>
%html{:lang=>"en-GB",:manifest=>'site.manifest'}
  %head
    %title= @title ? @title : 'Bills'
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    - if @external_sheet
      = stylesheet_link_tag @external_sheet, :media => 'screen, projection, print'
    -else
      -unless params[:wide]
        = stylesheet_link_tag 'screen', :media => 'screen, projection'
      -if page_class == 'application index'
        = stylesheet_link_tag 'index', :media => 'screen, projection'
      -if page_class == 'application convert'
        = stylesheet_link_tag document_type(@file, @ens), :media => 'screen, projection'
        = stylesheet_link_tag document_type(@file, @ens) + '_print', :media => 'print'
      -if page_class == 'application act'
        = stylesheet_link_tag 'act', :media => 'screen, projection'
    %meta{ :name=>"viewport", :content=>"width = 480" }
    = stylesheet_link_tag 'ie', :media => 'screen, projection'
    = javascript_include_tag "prototype", :cache => true
  %body{:class => page_class}
    #page_header{:style=>"margin:1em;"}
      #navigation
        = link_to_unless_current("Bill Formats", { :action => "index" })
        - if @show_interleave_link
          &middot;
          = link_to('Show explanatory notes', "convert?file=#{@mif_file.path}&interleave=true")
        - elsif @show_uninterleave_link
          &middot;
          = link_to('Hide explanatory notes', "convert?file=#{@mif_file.path}")
    #container= yield
    #page_footer{:style=>"margin:1em;"}
